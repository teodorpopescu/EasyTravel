@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "EasyTravel";
}

<body id="page-top">
    <!-- Header -->
    <header>
        <div class="container">
            <div class="slider-container">
                <div class="intro-text">
                    <div class="intro-lead-in"><b>EasyTravel App!</b></div>
                    <div class="intro-heading">Inspiring new ways</div>
                    @{
                        if (User.Identity.IsAuthenticated)
                        { <a href="@Url.Action("InitialView", "Home")" class="page-scroll btn-success btn-lg">Go to Dashboard</a>}
                        else
                        { <a href="@Url.Action("Login", "Account")" class="page-scroll btn-success btn-lg">Connect</a>}
