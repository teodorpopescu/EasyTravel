@model EasyTravel.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<body id="page-top">
    <section style="background:url('../images/contact_bg.jpg') no-repeat">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="section-title">
                        <h2 style="font-size:25px; color:white"><b>Create an EasyTravel account</b></h2>
                    </div>
                </div>
            </div>
            <section>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <br /><br /><br />
                    <h4>Create a new account.</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    

                }

                <h4>Choose preferences.</h4>
                <hr />
                
                <div class="checkbox">

                    <div class="col-md-10">

                        <label><input type="checkbox" value="">spa</label>

                    </div>

                </div>

                <div class="checkbox">

                    <div class="col-md-10">

                        <label><input type="checkbox" value="">stadium</label>

                    </div>

                </div>

                <div class="checkbox">

                    <div class="col-md-10">

                        <label><input type="checkbox" value="">gym</label>

                    </div>

                </div>

                <div class="checkbox">

                    <div class="col-md-10">

                        <label><input type="checkbox" value="">night_club</label>

                    </div>

                </div>

                <div class="checkbox">

                    <div class="col-md-10">

                        <label><input type="checkbox" value="">restaurant</label>

                    </div>

                </div>

                <div class="checkbox">

                    <div class="col-md-10">

                        <label><input type="checkbox" value="">shopping_mall</label>

                    </div>

                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn" value="Register" />
                    </div>
                </div>
            </section>
        </div>
    </section>

    <p id="back-top">
        <a href="#top"><i class="fa fa-angle-up"></i></a>
    </p>
    <footer>
        <div class="container text-center">
            <p>Designed by <span>Olteanclan</span></p>
        </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/cbpAnimatedHeader.js"></script>
    <script src="js/theme-scripts.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="js/ie10-viewport-bug-workaround.js"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
